{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run Django Server",
            "type": "shell",
            "command": "python manage.py runserver",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false, 
            "problemMatcher": [], 
            "runOn": "folderOpen", 
            "presentation": {
                "reveal": "always", 
                "panel": "new", 
                "group": "startup-tasks" 
            }
        },
        {
            "label": "Aider (Gemini 2.5 Flash)",
            "type": "shell",
            "command": "aider --model gemini/gemini-2.5-flash-preview-05-20 --no-auto-commits --no-gitignore",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false, 
            "problemMatcher": [],
            "runOn": "folderOpen",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "startup-tasks"
            }
        },
        {
            "label": "Aider (Deepseek R1)",
            "type": "shell",
            "command": "aider --model openrouter/deepseek/deepseek-r1:free --editor-model gemini/gemini-2.5-flash-preview-05-20 --no-auto-commits --no-gitignore",
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "isBackground": false, 
            "problemMatcher": [],
            "runOn": "folderOpen",
            "presentation": {
                "reveal": "always",
                "panel": "new",
                "group": "startup-tasks"
            }
        }
    ]
}
