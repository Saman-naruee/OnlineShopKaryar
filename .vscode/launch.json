{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/manage.py",
            "args": [
                "runserver",
                "--noreload",
                "9000",
            ],
            "django": true,
            "justMyCode": true,
            "autoReload": {
                "enable": true
            },
            "console": "integratedTerminal",
            "env": {
                "DJANGO_DEBUG": "true"
            }
        }
    ]
}
